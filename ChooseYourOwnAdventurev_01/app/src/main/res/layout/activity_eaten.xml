<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_dark"
    android:orientation="vertical"
    tools:context="com.example.palmdigital.chooseyourownadventurev_01.EatenActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="15sp" />

    <TextView
        android:id="@+id/tvTitleEaten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Your Own Adventurev01"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15sp" />

    <TextView
        android:id="@+id/tvStoryEaten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You made a delicious soup! Yum! The end."
        android:textSize="50sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonRestart"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:text="Restart" />
    </LinearLayout>

</LinearLayout>
